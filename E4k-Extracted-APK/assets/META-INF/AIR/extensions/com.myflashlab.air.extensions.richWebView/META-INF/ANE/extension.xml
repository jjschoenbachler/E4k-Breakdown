<extension xmlns="http://ns.adobe.com/air/extension/30.0">
  <id>com.myflashlab.air.extensions.richWebView</id>
  <versionNumber>9.6.0</versionNumber>
  <copyright>2020, MyFlashLabs Team. All rights reserved.</copyright>
  <description>
		<text xml:lang="en">customized adobe air native extension</text> 
  </description> 
  <platforms>
  
    <platform name="Android-ARM64">
		<applicationDeployment>
			<nativeLibrary>classes.jar</nativeLibrary>
			<initializer>com.myflashlabs.richwebview.MyExtension</initializer>
			<finalizer>com.myflashlabs.richwebview.MyExtension</finalizer>
		</applicationDeployment>
    </platform>
  
    <platform name="Android-ARM">
		<applicationDeployment>
			<nativeLibrary>classes.jar</nativeLibrary>
			<initializer>com.myflashlabs.richwebview.MyExtension</initializer>
			<finalizer>com.myflashlabs.richwebview.MyExtension</finalizer>
		</applicationDeployment>
    </platform>
	
	<platform name="Android-x86">
		<applicationDeployment>
			<nativeLibrary>classes.jar</nativeLibrary>
			<initializer>com.myflashlabs.richwebview.MyExtension</initializer>
			<finalizer>com.myflashlabs.richwebview.MyExtension</finalizer>
		</applicationDeployment>
    </platform>
	
	<platform name="iPhone-ARM">
		<applicationDeployment>
			<nativeLibrary>libexRichWebView.a</nativeLibrary>
			<initializer>comMyflashlabsRWVInitializer</initializer>
			<finalizer>comMyflashlabsRWVFinalizer</finalizer>
		</applicationDeployment>
	</platform>
	
	<platform name="default"> 
		<applicationDeployment/>
	</platform> 
	
  </platforms>
</extension>

